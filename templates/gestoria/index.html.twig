{% extends 'contacto/_base.html.twig' %}

{% block title %}Gestoria index{% endblock %}

{% block body %}

<div class="botonesmodal">    
    <!-- Button trigger modal -->
    <a href="{{ path('empresa_new') }}" class="btn btn-secondary btn-sm" role="button" data-toggle="modal" data-target="#modalP" aria-pressed="true">Nueva gestoría</a>
</div>


<div class="container-fluid"> 
    <table class="table">
        <thead class="thead" id="gestoriaindex">   
            <tr>
                <th>Nº</th>                
                <th>Nombre</th>
                <th>Nombre usuario</th>
                <th>Correo electrónico</th>
                <th>Detalles</th>
            </tr>
        </thead>
        <tbody>
        {% for gestorium in gestorias %}
            <tr>
                <td>{{ gestorium.id }}</td>
                <td><a href="{{ path('gestoria_edit', {'id': gestorium.id}) }}">{{ gestorium.nombre }}</a> </td>  
                <td>{{ gestorium.username }}</td>
                <td>{{ gestorium.email }}</td>             
                <td><a href="{{ path('gestoria_show', {'id': gestorium.id}) }}">+ Info</a></td> 
                
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
   {{ include('gestoria/_modal.html.twig')}}
    
{% endblock %}